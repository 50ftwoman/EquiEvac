    <% @posts.each do |post| %>
    <div class="postshow">
      <tr>
        <h2><strong><td><%= post.title %></td></strong></h2>
        <td>By: <%= post.user.name %></td>
        <td><%= link_to 'Show', post_path(post), :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => "btn btn-default btn-sm" if current_user == post.user %></td>
        <td><%= link_to 'Destroy', post_path(post), :class => "btn btn-default btn-sm", method: :delete, data: { confirm: 'Are you sure?'} if current_user == post.user%></td>
        <br>
        <br>
      </tr>
</div>
    <% end %>
  </div>
