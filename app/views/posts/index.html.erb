<div class="jumbotron">
  <h1>EquiEvac</h1>
  <%= link_to 'Log In', login_path, :class => "btn btn-primary btn-lg" %> <%= link_to 'Sign Up', new_user_path, :class => "btn btn-primary btn-lg" %><br>
  <%= link_to 'New Post', new_post_path, :class => "btn btn-default btn-lg" %>
</div>

