
<p>
  <strong>Title</strong>
  <%= @post.title%>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>

<p>
  <strong>Comments:</strong>
  <%= render 'comments/form' %>
</p>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Comment</th>
      <th colspan="10"></th>
    </tr>
  </thead>

<tbody>
  <% @post.comments.each do |comment| %>
    <tr>
      <td><%= comment.user.name %></td><br><br>
      <td><%= comment.content %></td>
    </tr>
  <% end %>
</tbody>
</table>
