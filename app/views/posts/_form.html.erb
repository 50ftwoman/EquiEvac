<%= form_for [@post] do |f| %>
<div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.collection_select(:category_id, Category.all, :id, :cat_type, prompt: true)  %>

</div>

<div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: "form-control"%>
</div>

  <div>
    <%= f.submit "Post!" %>
  </div>
<% end %>
