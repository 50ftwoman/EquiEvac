<%= form_for [@post] do |f| %>
<div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :image %>
</div>
<%= f.file_field :image, class: "form-control" %>

<div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: "form-control"%>
</div>

  <div>
    <%= f.submit "Post!" %>
  </div>
<% end %>
